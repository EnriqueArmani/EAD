<!doctype html>
<html lang="en">

<head>
    <% include partials/head %>

</head>

<body>
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Warning: Delete Post</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
                </div>
                <form method="POST" action="/posts/delete?_method=DELETE">
                    <div class="modal-body">
                        <p>You are about to delete this blog post do you wish to continue?</p>
                        <div class="form-group">
                            <input type="hidden" class="form-control" type="text" placeholder="Page Title" name="postTitle">
                        </div>
                        <div class="form-group"><input type="hidden" class="form-control" type="text" placeholder="Post Slug" name="postSlug"></div>
                        <div class="form-group">
                            <input type="hidden" type="text" placeholder="Content" name="postContent">
                        </div>


                        <div class="clearfix"></div>


                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger btn-fill pull-right" value="delete" type="submit">delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="wrapper">
        <% include partials/sidebar %>

            <div class="main-panel">
                <% include partials/topnav %>
<form method="POST" action="/posts/update?_method=PUT">
                    <div class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="header">
                                            <h4 class="title">Edit Blog Post</h4>
                                        </div>
                                        <div class="content">
                                            
                                                <div class="form-group">
                                                    <%= postSlug %>
                                                        <input id="post-title-field" class="form-control" type="text" placeholder="Page Title" name="postTitle">
                                                </div>
                                                <div class="form-group"><input id="post-slug-field" class="form-control" type="text" placeholder="Post Slug" name="postSlug"></div>
                                                <div class="form-group">
                                                    <textarea id="postContent" type="text" placeholder="Content" name="postContent"> </textarea>
                                                </div>
                                                <button class="btn btn-info btn-fill pull-right" value="put" type="submit">Update</button>

                                                <button style="margin-right:10px;" type="button" class="btn btn-fill btn-danger pull-right" data-toggle="modal" data-target="#deleteModal">
 Delete
</button>
                                                <div class="clearfix"></div>

                                            
                                        </div>


                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="header">
                                            <h4 class="title">Categories</h4>
                                            <div class="category">
                                               <% for(var i=0; i<categories.length; i++) {%>
                                                    
                                                <label><input type="checkbox" name="postCategories[]" value="<%= categories[i] %>" /><%= categories[i] %></label>
                                               <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    
                                    <div class="card">
                                        <div class="header">
                                            <h4 class="title">Blog Posts</h4>
                                            <p class="category">View and Edit Your Blog Posts</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    </form>
            </div>


            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
